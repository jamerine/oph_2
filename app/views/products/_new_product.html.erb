<div class="container new-product-box">
  <div class="jumbotron jumbotron-white">

  <h3>Create New Product</h3>
  <%= form_for @new_product do |f| %>
    <div class="row">

        <div class="form-group col-4">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Product Name", required: true  %>
        </div>

        <div class="form-group col-4">
          <!-- <%= f.number_field :price, class: "form-control", placeholder: "Price", step: 0.25  %> -->
          <!-- <%= f.number_field :price, class: "form-control", value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any  %> -->
          <%= f.number_field :price, class: "form-control", placeholder: "Price: (enter as 0.00)", step: 0.01, required: true %>
        </div>

        <div class="form-group col-4">
          <%= f.select :product_type, options_for_select(@product_types.collect { |s| [s[0].humanize, s[0]] }), {include_blank: 'Select Product Type'} , class: "form-control", required: true  %>
        </div>



        <div class="form-group col-12">
          <%= f.text_area :short_description, class: "form-control", placeholder: "Short Description", rows: 1, required: true   %>
        </div>

        <div class="form-group col-12">
          <%= f.text_area :long_description, class: "form-control", placeholder: "Long Description", rows: 3, required: true  %>
        </div>


    </div>

        <div class="row">

          <div class="form-group col-4">
            <%= f.label :active %>
            <%= f.check_box :active, class: "form-control"%>
          </div>

          <div class="form-group col-4">
            <%= f.label :in_store_item %>
            <%= f.check_box :in_store_item, class: "form-control"%>
          </div>

          <div class="form-group col-4">
            <%= f.label :online_order_item %>
            <%= f.check_box :online_order_item, class: "form-control"%>
          </div>

        </div>


        <div class="actions text-center">
          <%= f.submit "SUBMIT", class: 'btn btn-primary btn-product-submit' %>
        </div>

    <% end %>
  </div>
</div>
