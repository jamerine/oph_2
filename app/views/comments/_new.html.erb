<div class="container new-comment-box">

  <%= form_for @new_comment do |f| %>

      <div class="row">

          <div class="form-group col-6">
            <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
          </div>

          <div class="form-group col-6">
            <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name"  %>
          </div>

      </div>

      <div class="row">

          <div class="form-group col-6">
            <%= f.text_field :email_address, autofocus: true, class: "form-control", placeholder: "Email Address"  %>
          </div>

          <div class="form-group col-6">
            <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "Phone Number"  %>
          </div>

        </div>

        <div class="row">

          <div class="form-group col-12">
            <%= f.text_area :body, autofocus: true, class: "form-control", placeholder: "How can we help?", rows: "3" %>
          </div>

        </div>

        <div class="actions text-center">
          <%= f.submit "SUBMIT", class: 'btn btn-primary btn-comment-submit' %>
        </div>
  <% end %>


</div>
